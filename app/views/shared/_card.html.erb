


  <div class="row">
    <% @cocktails.each do |cocktail|%>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo.path, height: 300, width: 400, crop: :fill if cocktail.photo? %>')">
        <div class="card-category"><%= cocktail.name %></div>
        <div class="card-description">
          <%= link_to "Go to cocktail", cocktail_path(cocktail), class:"btn-danger btn-sm" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
