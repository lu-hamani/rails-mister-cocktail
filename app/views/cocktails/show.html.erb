<h1 class="text-center"><%= @cocktail.name %></h1>
<div class="container">
  <div class="row">
    <% @cocktail.doses.each do |dose| %>
    <div class="col-xs-12 col-sm-4">
      <ul>
        <%= dose.description %>
        <%= dose.ingredient[:name] %>
        <%= link_to "delete dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure ?" }, class:"btn btn-danger" %>
      </ul>
    </div>
    <% end %>
  </div>
</div>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient_id, collection: @ingredients %>
  <%= f.submit class:"btn btn-danger" %>
<% end %>

<%= link_to "delete cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure ?" }, class:"btn btn-danger" %>
